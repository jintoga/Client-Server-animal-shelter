<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Animals"
        android:id="@+id/btnListAnimals" />


    <ImageView
        android:id="@+id/Imageprev"
        android:layout_marginLeft="5dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/placeholder"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_alignLeft="@+id/layoutforImgBtnUpload"
        android:layout_alignStart="@+id/layoutforImgBtnUpload" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCapture"
        android:src="@drawable/capture"
        android:background="@null"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/btnBrowse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBrowse"
        android:background="@null"
        android:src="@drawable/browse"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/btnListAnimals"
        android:layout_alignRight="@+id/btnListAnimals"
        android:layout_alignEnd="@+id/btnListAnimals" />


    <LinearLayout
        android:id="@+id/layoutforImgBtnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/btnUpload"
            android:src="@drawable/upload"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Послать"
            android:id="@+id/textView10"
            android:layout_gravity="center"
            android:textColor="#ff000000" />

    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Imageprev"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/layoutforImgBtnUpload"
        android:background="@drawable/border_style4"
        android:id="@+id/scrollView">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_style3"
            android:stretchColumns="*">

            <TableRow
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Номер Телефон:"
                    android:id="@+id/textView2"
                    android:textColor="#ff000000" />

                <EditText
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:id="@+id/editText4" />

            </TableRow>

            <TableRow
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Добавить Информации О Животном?"
                    android:textColor="#ff000000"
                    android:id="@+id/textView3" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Да"
                    android:id="@+id/checkBoxMoreInformation"
                    android:checked="false"
                    android:layout_gravity="center" />

            </TableRow>

            <TableLayout
                android:layout_marginLeft="5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="*"
                android:id="@+id/tableMoreInformation">


                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layerType="software"
                    android:background="@drawable/separator"
                    android:layout_gravity="center" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вид:"
                        android:textColor="#ff000000"
                        android:id="@+id/textView6" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/array_item_test_for_spinner"
                        android:focusable="true" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кличка:"
                        android:textColor="#ff000000"
                        android:id="@+id/textView4" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText2" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff000000"
                        android:text="Порода:"
                        android:id="@+id/textView5" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Пол:"
                        android:textColor="#ff000000"
                        android:id="@+id/textView7" />

                    <RadioGroup android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="М"
                            android:id="@+id/radioButton2"
                            android:checked="false" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ж"
                            android:id="@+id/radioButton"
                            android:checked="false" />
                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Возраст:"
                        android:textColor="#ff000000"
                        android:id="@+id/textView8" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner3"
                        android:entries="@array/array_item_test_for_spinner" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вес:"
                        android:textColor="#ff000000"
                        android:id="@+id/textView9" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/editText" />
                </TableRow>

            </TableLayout>

        </TableLayout>
    </ScrollView>


</RelativeLayout>