<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dat.animalsshelter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.location"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBYiKGKbKAlbv_aQUykAALdLXCpKdY9aXw" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".get_list_animals.GetListAnimals"
            android:label="@string/title_activity_get_list_animals"></activity>
        <activity
            android:name=".get_list_animals.ShowOneAnimal"
            android:label="@string/title_activity_show_one_animal"></activity>
        <activity
            android:name=".help_about.HelpUs"
            android:label="@string/title_activity_help_us"></activity>
        <activity
            android:name=".help_about.AboutUs"
            android:label="@string/title_activity_about_us"></activity>
        <activity
            android:name=".send_animal.SendAnimal"
            android:label="@string/title_activity_send_animal"></activity>
        <activity
            android:name=".send_lost_animal.SendLostAnimal"
            android:label="@string/title_activity_send_lost_animal"></activity>
        <activity
            android:name=".send_lost_animal.GoogleMapActivity"
            android:label="@string/title_activity_google_map"></activity>
    </application>

</manifest>
